<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/hd_layout_edv3_lin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hd_background"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/hd_layout_sensorDataFrame"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/hd_layout_roomDataFra"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.3" >

                <LinearLayout
                    android:id="@+id/hd_layout_edv1_lin"
                    style="@style/Tile"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <at.sesame.fhooe.lib.ui.EnergyMeter
                        android:id="@+id/energyMeterViewEdv1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <FrameLayout
                        android:id="@+id/hd_layout_edv1Frame"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" >
                    </FrameLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/hd_layout_edv3_lin"
                    style="@style/Tile"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <at.sesame.fhooe.lib.ui.EnergyMeter
                        android:id="@+id/energyMeterViewEdv3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <FrameLayout
                        android:id="@+id/hd_layout_edv3Frame"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" >
                    </FrameLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/hd_layout_edv6_lin"
                    style="@style/Tile"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <at.sesame.fhooe.lib.ui.EnergyMeter
                        android:id="@+id/energyMeterViewEdv6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <FrameLayout
                        android:id="@+id/hd_layout_edv6Frame"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" >
                    </FrameLayout>
                </LinearLayout>
            </LinearLayout>

            <FrameLayout
                android:id="@+id/hd_layout_chartFrame"
                style="@style/Tile"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.7" >
            </FrameLayout>
        </LinearLayout>

        <FrameLayout
            android:id="@+id/hd_layout_pmsFrame"
            style="@style/Tile"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3" >
        </FrameLayout>
    </LinearLayout>

</LinearLayout>