<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/icon_label_holder"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/list_item_textarea" >

        <ImageView
            android:id="@+id/osIconView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingRight="5dp"
            android:src="@drawable/icon" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/nameLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:text="Small Text"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#ffffffff" />

            <TextView
                android:id="@+id/ipLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:text="Small Text"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#ff666666" />

            <TextView
                android:id="@+id/idleLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:text="Small Text"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#ff666666" />
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/controllable_device_list_item_placeholder"
        android:layout_width="72px"
        android:layout_height="72px"
        android:layout_marginLeft="3dp"
        android:background="@drawable/list_item_notch"
        android:paddingTop="1px" >
    </FrameLayout>

    <CheckBox
        android:id="@+id/controllable_device_list_item_selection_box"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="0.2" />

</LinearLayout>