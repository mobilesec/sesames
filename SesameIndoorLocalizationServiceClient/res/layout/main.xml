<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
<ToggleButton android:layout_width="wrap_content" android:text="ToggleButton" android:layout_height="wrap_content" android:id="@+id/toggleButton1" android:checked="true"></ToggleButton>
<ScrollView
    android:id="@+id/sv1"
    android:layout_width="match_parent"
    android:layout_height="0dip" android:layout_weight="0.45">
    <EditText android:layout_width="match_parent" android:layout_height="wrap_content" android:inputType="textMultiLine" android:id="@+id/trainingBSSIDs">
        <requestFocus></requestFocus>
    </EditText>
</ScrollView>
<ScrollView
    android:id="@+id/sv2"
    android:layout_width="match_parent"
    android:layout_height="0dip" android:layout_weight="0.45">
    <EditText android:layout_width="match_parent" android:layout_height="wrap_content" android:inputType="textMultiLine" android:id="@+id/receivedBssids"></EditText>
</ScrollView>
</LinearLayout>
