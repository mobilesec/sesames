<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent">
    <FrameLayout 	android:id="@+id/firstFrame" 
    				android:layout_height="wrap_content" 
    				android:layout_width="match_parent">
   		 
   		 <fragment 	android:name="at.sesame.fhooe.charts.rating.RatingItemFragment"
		  			android:id="@+id/ratingItemFirst"
		  			android:layout_width="wrap_content"
		            android:layout_height="wrap_content" 
		            android:layout_gravity="center_horizontal"/>
    </FrameLayout>
    
    <LinearLayout 	android:id="@+id/linearLayout2" 
    				android:layout_height="wrap_content" 
    				android:layout_width="match_parent">
    	
    	<FrameLayout 	android:layout_height="wrap_content" 
    					android:layout_width="wrap_content" 
    					android:id="@+id/secondFrame">
    		
    		<fragment 	android:name="at.sesame.fhooe.charts.rating.RatingItemFragment"
			  			android:id="@+id/ratingItemSecond"
			  			android:layout_width="wrap_content"
			            android:layout_height="wrap_content" 
			            android:layout_gravity="center_horizontal"/>
    	</FrameLayout>
    
    	<FrameLayout 	android:layout_height="wrap_content" 
    					android:layout_width="match_parent" 
    					android:id="@+id/thirdFrame">
    		
    		<fragment 	android:name="at.sesame.fhooe.charts.rating.RatingItemFragment"
			  			android:id="@+id/ratingItemThird"
			  			android:layout_width="wrap_content"
			            android:layout_height="wrap_content" 
			            android:layout_gravity="center_horizontal"/>
    	</FrameLayout>
    </LinearLayout>
</LinearLayout>
